def process_matching(cell, mean, sigma, min_wait, max_wait, memory_cell_count, retina_cell_count):

	not_listening_time = datetime.now()

	while True:
		signal = cell.receptor.get()

		if False and datetime.now() < not_listening_time:
			#log.info("Matching {i} not listening".format(i=cell.id_num))
			continue

		output = update_matching(cell, signal, memory_cell_count, retina_cell_count)

		if output:

			isi = ISI(
				origin=cell.name,
				position=output,
				feature=None,)


			for connection in cell.links:
				try:	
					connection.receptor.put(isi,block=False)
					log.info('Matching {i} fires hypothesis {h}'.format(
						i=cell.id_num,
						h=isi.position,))
				except queue.Full:
					log.info('Matching {i} fires hypothesis {h} (overflow)'.format(
						i=cell.id_num,
						h=isi.position,))

			not_listening_time = datetime.now() + timedelta(
				0,
				max(min(
					random.gauss(mean,sigma,),max_wait,),min_wait,))
