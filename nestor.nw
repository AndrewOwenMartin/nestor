def update_matching(cell, signal, memory_cell_count, retina_cell_count):

	fire = None

	if cell.hypothesis is None: # 1,2,3,4
		if cell.what is None: #1,2
			if cell.where is None: #1
				if signal.origin == Retina.name: # Go from 1 to 2
					cell.where = signal.position
					log.info('#1 {name}{num} adopts retina position {x}'.format(
						name=cell.name,
						num=cell.id_num,
						x=signal.position,
					))
				elif signal.origin == Memory.name: # Go from 1 to 3
					cell.what = signal.position
					log.info('#1 {name}{num} adopts memory position {x}'.format(
						name=cell.name,
						num=cell.id_num,
						x=signal.position,
					))
				elif signal.origin == Matching.name: # Go from 1 to 5
					cell.hypothesis = signal.position
					log.info('#1 {name}{num} adopts matching hypothesis {x}'.format(
						name=cell.name,
						num=cell.id_num,
						x=signal.position,
					))
					# Fire your hypothesis as a position
					fire = cell.hypothesis
			else: #2
				if signal.origin == Memory.name: # Go from 2 to 1
					cell.what = signal.position
					# Fire what+where as a position
					fire = cell.where + cell.what
					cell.what = None
					cell.where = None
					log.info('#2 {name}{num} propogates putative hypothesis {x}'.format(
						name=cell.name,
						num=cell.id_num,
						x=fire,
					))
		else: #3,4
			if cell.where is None: #3
				if signal.origin == Retina.name: # Go from 3 to 1
					cell.where = signal.position
					# Fire what+where as a position
					fire = cell.where + cell.what
					cell.what = None
					cell.where = None
					log.info('#3 {name}{num} propogates putative hypothesis {x}'.format(
						name=cell.name,
						num=cell.id_num,
						x=fire,
					))
			else: #4
				# shouldn't happen, as soon as you have what and where
				# and are inactive, you'll fire and delete what+where
				raise RuntimeException('state 4')
	else: # 5,6,7,8
		if cell.what is None: #5,6
			if cell.where is None: #5
				if signal.origin == Retina.name: # Go from 5 to 6
					if signal.position >= cell.hypothesis:
						log.info('#5 {name}{num} rejects retina {p} as too large and goes inactive'.format(
							name=cell.name,
							num=cell.id_num,
							p=signal.position,
						))
						cell.hypothesis = None
					elif signal.position + memory_cell_count < cell.hypothesis:
						log.info('#5 {name}{num} rejects retina {p} as too small and goes inactive'.format(
							name=cell.name,
							num=cell.id_num,
							p=signal.position,
						))
						cell.hypothesis = None
					elif signal.position < cell.hypothesis:
						# adopt retina 'what' and 'where'
						cell.where = signal
						log.info('#5 {name}{num} prepares retina test {x}'.format(
							name=cell.name,
							num=cell.id_num,
							x=signal,
						))
				elif signal.origin == Memory.name: # Go from 5 to 7
					if signal.position >= cell.hypothesis:
						log.info('#5 {name}{num} rejects memory {p} as too large and goes inactive'.format(
							name=cell.name,
							num=cell.id_num,
							p=signal.position,
						))
						cell.hypothesis = None
					elif signal.position + retina_cell_count < cell.hypothesis:
						log.info('#5 {name}{num} rejects memory {p} as too small and goes inactive'.format(
							name=cell.name,
							num=cell.id_num,
							p=signal.position,
						))
						cell.hypothesis = None
					elif signal.position < cell.hypothesis:
						# adopt memory 'what' and 'where'
						cell.what = signal
						log.info('#5 {name}{num} prepares memory test {x}'.format(
							name=cell.name,
							num=cell.id_num,
							x=signal,
						))

				elif signal.origin == Matching.name:
					# do nothing with matching signal when active
					pass
					log.info('#5 {name}{num} ignores matching signal {x}'.format(
						name=cell.name,
						num=cell.id_num,
						x=signal,
					))
			else: #6
				if signal.origin == Memory.name: # Go from 6 to 5 or 1
					if cell.where.position + signal.position == cell.hypothesis:
						cell.what = signal
						if not (cell.what.feature == cell.where.feature):
							cell.hypothesis = None
						else:
							# fire hypothesis
							fire = cell.hypothesis
						log.info('#6 {name}{num} tested {a} and {b}. Hyp is now {h}, firing {f}.'.format(
							name=cell.name,
							num=cell.id_num,
							a=cell.what,
							b=cell.where,
							h=cell.hypothesis,
							f=fire,
						))
						cell.what = None
						cell.where = None
						# check features, delete where and what and if
						# the features are different delete hypothesis
					else:
						log.info('#6 {name}{num} did not test memory {p} as adding it to {what} did not equal hyp {h}.'.format(
							name=cell.name,
							num=cell.id_num,
							p=signal.position,
							what=cell.where.position,
							h=cell.hypothesis,
						))
		else: #7,8
			if cell.where is None: #7
				if signal.origin == Retina.name: # Go from 7 to 5 or 1
					if cell.what.position + signal.position == cell.hypothesis:
						cell.where = signal
						# check features, delete where and what and if
						# the features are different delete hypothesis
						if not (cell.what.feature == cell.where.feature):
							cell.hypothesis = None
						else:
							# fire hypothesis
							fire = cell.hypothesis
						log.info('#7 {name}{num} tested {a} and {b}. Hyp is now {h}, firing {f}.'.format(
							name=cell.name,
							num=cell.id_num,
							a=cell.what,
							b=cell.where,
							h=cell.hypothesis,
							f=fire,
						))
						cell.what = None
						cell.where = None
					else:
						log.info('#7 {name}{num} did not test retina {p} as adding it to {what} did not equal hyp {h}.'.format(
							name=cell.name,
							num=cell.id_num,
							p=signal.position,
							what=cell.what.position,
							h=cell.hypothesis,
						))

			else: #8
				# shouldn't happen, as soon as you have what and where
				# and are active, you'll fire and delete what+where
				raise RuntimeException('state 4')
	return fire
